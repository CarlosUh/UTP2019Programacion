{
	"model_name":"Alumno",
	"soft_deletes":"yes",
	"pk":"id",
	"localize":"yes",
	"table":"alumno",
    "fields": [		
        {
            "name": "nombre",
            "type": "string"
        },
        {
            "name": "description",
            "type": "text"
        },
        {
            "name": "grupo_id",
            "type": "bigint#unsigned"
        }
    ],
    "foreign_keys": [
        {
            "column": "grupo_id",
            "references": "id",
            "on": "grupo",
            "onDelete": "cascade"
        }
    ],
    "relationships": [
        {
            "name": "grupo",
            "type": "belongsTo",
            "class": "App\\Models\\Grupo"
        }
    ],
    "validations": [
        {
            "field": "name",
            "rules": "required|min:5|max:20"
        },
		{
            "field": "description",
            "rules": "required|min:5"
        }
    ]
	
}